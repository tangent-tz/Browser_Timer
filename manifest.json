{
  "manifest_version": 3,
  "name": "YouTube Timer & Video Automation",
  "version": "1.0",
  "description": "A lightweight extension to manage timers and automate actions on YouTube videos.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["videoTracker.js"],
      "run_at": "document_end"
    }
  ]
}
